<!-- dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            background-image: url('/public/assets/images/manit.jpg');
            background-size: cover;
            background-position: center;
        }

        h1,h2 {
            text-align: center;
            margin-top: 20px;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }
        .btn-danger{
          border-radius: 8px;
        }
        .btn-danger:hover{
          background-color:white;
          font-weight: bold;
          border-color:#BB86FC;
          color:#BB86FC;
        }
    </style>
</head>
<body>
    <h1>Feedbacks</h1>
    <table>
        <thead>
            <tr>
                <th>Year</th>
                <th>Section</th>
                <th>Branch</th>
                <th>Faculty ID</th>
                <th>Score Q1</th>
                <th>Score Q2</th>
                <th>Score Q3</th>
                <th>Score Q4</th>
                <th>Score Q5</th>
                <th>Score Q6</th>
                <th>Score Q7</th>
                <th>Score Q8</th>
                <th>Score Q9</th>
                <th>Score Q10</th>
            </tr>
        </thead>
        <tbody>
            <% feedbacks.forEach(feedback => { %>
                <tr>
                    <td><%= feedback.year %></td>
                    <td><%= feedback.section %></td>
                    <td><%= feedback.branch %></td>
                    <td><%= feedback.fac_id %></td>
                    <% for (let i = 1; i <= 10; i++) { %>
                        <td><%= (feedback['q' + i] / feedback.responses).toFixed(2) %></td>
                    <% } %>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
<%- include('partials/footer') %>
</html>