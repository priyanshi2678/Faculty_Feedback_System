<div class="main">
    <h1>Edit Subject</h1>
    <form action="/subjects/edit/<%= subject.id %>" method="POST">
        <label for="discipline_id">Discipline</label>
        <select id="discipline_id" name="discipline_id">
            <% disciplines.forEach(discipline => { %>
                <option value="<%= discipline.id %>" <%= subject.discipline_id === discipline.id ? 'selected' : '' %>><%= discipline.name %></option>
            <% }) %>
        </select>

        <label for="branch_id">Branch</label>
        <select id="branch_id" name="branch_id">
            <% branches.forEach(branch => { %>
                <option value="<%= branch.branch_id %>" <%= subject.branch_id === branch.id ? 'selected' : '' %>><%= branch.branch_name %></option>
            <% }) %>
        </select>

        <label for="subject_name">Subject Name</label>
        <input type="text" id="subject_name" name="subject_name" value="<%= subject.name %>" required>

        <button type="submit">Update Subject</button>
    </form>
</div>
