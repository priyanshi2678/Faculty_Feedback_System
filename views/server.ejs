<%- include('partials/header', { activePage: 'server' }) %>
<body>
    

    <div class="main">
        <div class="card">
        <h1>Server Control</h1>
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Semester</th>
                        <th>Action</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 1; i <= 8; i++) { %>
                        <tr>
                            <td>Semester <%= i %></td>
                            <td>
                                <form action="/server/toggle" method="POST">
                                    <button type="submit" name="semester" value="<%= i %>">
                                        <%= semesterStates[i - 1] ? 'Turn Off' : 'Turn On' %>
                                    </button>
                                </form>
                            </td>
                            <td>
                                <div class="status"><%= semesterStates[i - 1] ? 'ON' : 'OFF' %></div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    </div>
